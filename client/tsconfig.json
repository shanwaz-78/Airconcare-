{
  "compilerOptions": {
    "baseUrl": ".",
    "jsx": "preserve",
    "allowJs": true,
    "checkJs": false,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "skipLibCheck": true,
    "strict": true,
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@/app/*": [
        "src/app/*"
      ],
      "@/components/*": [
        "src/app/components/*"
      ],
      "@/components/admin/*": [
        "src/app/components/admin/*"
      ],
      "@/components/auth/*": [
        "src/app/components/auth/*"
      ],
      "@/components/client/*": [
        "src/app/components/client/*"
      ],
      "@/auth/*": [
        "src/app/(auth)/*"
      ],
      "@/client/*": [
        "src/app/(client)/*"
      ],
      "@/admin/*": [
        "src/app/(admin)/*"
      ],
      "@/lib/*": [
        "src/app/lib/*"
      ],
      "@/context/*": [
        "src/app/context/*"
      ],
      "@/hooks/*": [
        "src/app/hooks/*"
      ],
      "@/styles/*": [
        "src/app/styles/*"
      ],
      "@/api/*": [
        "src/app/api/*"
      ],
      "@/public/*": [
        "public/*"
      ]
    },
    "target": "ES2017",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    "**/*.js",
    "**/*.jsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
